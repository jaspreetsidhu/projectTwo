<div id="gallery">
    {{> header }}
    <div class="container mt-5">
        <section class="gallery__controls">
            <div class="row">
                <div class="col-12">
                    <div class="gallery__controls-menu">

                        <input type="search" name="search" placeholder="Tag Search" class="mr-4" />
                        <select name="age" onchange="location = this.value;" id="age" class="mr-4">
                            <option selected disabled>--Sort By Age--</option>
                            <option value="gallery/age/puppy">Puppy</option>
                            <option value="gallery/age/adult">Adult</option>
                            <option value="gallery/age/senior">Senior</option>
                        </select>
                        <select name="rating" onchange="location = this.value;" id="rating" class="mr-4">
                            <option selected disabled>--Sort By Rating--</option>
                            <option value="/gallery/rating/paws-1">1 Paw</option>
                            <option value="/gallery/rating/paws-2">2 Paws</option>
                            <option value="/gallery/rating/paws-3">3 Paws</option>
                            <option value="/gallery/rating/paws-4">4 Paws</option>
                        </select>
                        <select name="distance" onchange="location = this.value;" id="distance" class="mr-4">
                            <option selected disabled>--Sort By Distance--</option>
                            <option value="/gallery/distance/dist-5">Within 5 miles</option>
                            <option value="/gallery/distance/dist-10">Within 10 miles</option>
                            <option value="/gallery/distance/dist-15">Within 15 miles</option>
                            <option value="/gallery/distance/dist-20">Within 20 miles</option>
                        </select>
                    </div>
                </div>
            </div>
        </section>
        <section class="gallery__table mt-5">
            <div class="row galler__table__row">
                {{#each dogs}}
                {{#if available}}
                {{> dog}}
                {{/if}}
                {{/each}}
            </div>
        </section>
    </div>
