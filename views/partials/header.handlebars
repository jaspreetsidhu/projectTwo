    <div class="modal-content">
      <div class="modal-header">
        <h3 class="color-primary modal-title bold" id="loginModalLabel">User Login</h3>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body text-center">
        <button class="btn btn-theme-google btn-lg m-5"><i class="fab fa-google pr-3"></i>Login with Google</button>
